<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="inherit_hr_contract_view_form">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">      
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                </xpath>
                <xpath expr="//notebook" position="replace">
                    <notebook>
                        <page string="Information" name="information">
                            <group>
                                <group name="salary_and_advantages" string="Salary">
                                    <field name="x_grosssalary"/>
                                    <field name="allow_optimize_salary"/>
                                    <field name="house_rent_alw"/>
                                    <field name="conveyance_alw"/>
                                    <field name="medical_alw"/>
                                    <field name="special_alw"/>
                                    <field name="dearness_alw"/>
                                    <field name="mobile_alw"/>
                                    <field name="wage"/>
                                </group>
                                <group name="partial_salary_and_advantages" string="Partial Salary">
                                    <field name="allow_partial_salary"/>
                                    <field name="partial_salary_date"/>
                                    <field name="partial_salary_rate"/>
                                </group>
                                <group name="salary_and_advantages" string="Advantages">
                                    <field name="advantages" nolabel="1" placeholder="Advantages..." colspan="2" invisible="1"/>                                    
                                    <field name="allow_manual_investment_rebate"/>
                                    <field name="manual_investment_amount"/>
                                    <field name="allow_tax_for_bonuse"/>
                                    <field name="bonus_amount"/>
                                </group>
                                <group name="duration_group" string="Duration">

                                    <label for="trial_date_start" string="Trial Period Duration" invisible="1"/>
                                    <div style="display:none">
                                        <field name="trial_date_start" class="oe_inline"/> - <field name="trial_date_end" class="oe_inline"/>
                                    </div>

                                    <label for="date_start" string="Duration"/>
                                    <div>
                                        <field name="date_start" class="oe_inline"/> - <field name="date_end" class="oe_inline"/>
                                    </div>

                                    <field name="working_hours" invisible="1"/>
                                </group>
                            </group>
                            <separator string="Notes"/>
                            <field name="notes"/>
                        </page>
                        <page string="Work Permit">
                            <group col="4">
                                <field name="visa_no"/>
                                <field name="permit_no"/>
                                <field name="visa_expire"/>
                            </group>
                        </page>
                    </notebook>
                </xpath>    
            </field>
        </record>

         <record model="ir.ui.view" id="inherit_hr_contract_view_tree">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">            
                <xpath expr="//tree" position="replace">
                    <tree string="Contracts" decoration-bf="message_needaction == True">
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="employee_code" />
                        <field name="sf_id_2" />
                        <field name="work_location_type" />
                        <field name="company_id" invisible="1"/>
                        <field name="type_id" invisible="1"/>
                        <field name="job_id"/>
                        <field name="working_hours" invisible="1"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="wage" invisible="1"/>
                        <field name="message_needaction" invisible="1"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="hr_contract.action_hr_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">hr.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_current':1}</field>
            <field name="search_view_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click here to create new contracts.
              </p>
            </field>
            <field name="limit">10000</field>
        </record>
        
    </data>
</odoo>