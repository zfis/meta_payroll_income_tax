<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_challan_tree" model="ir.ui.view">
        <field name="name">tax.challan.tree</field>
        <field name="model">tax.challan</field>
        <field name="arch" type="xml">
            <tree string="Challans">
                <field name="name" />
                <field name="payroll_month" />
                <field name="payroll_year" />
                <field name="state"/>
                <field name="company_id" />
            </tree>
        </field>
    </record>

    <record id="tax_challan_form" model="ir.ui.view">
        <field name="name">tax.challan.form</field>
        <field name="model">tax.challan</field>
        <field name="arch" type="xml">
            <form string="Challans">
                <header>
                    <button name="confirm_challan_run" type="object" states="draft" string="Confirm" class="oe_highlight" />
                    <button name="challan_tds_calculation_run" type="object" states="draft" string="Generate TDS" class="oe_highlight" />
                    <button name="draft_challan_run" type="object" states="confirm" string="Set to Draft"  />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                     <div class="oe_title">
                        <h1>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" />
                        </h1>
                    </div>
                    <group col="4">
                        <field name="payroll_month" />
                        <field name="payroll_year" />
                        <field name="name" />
                        <field name="cheque_no" />
                        <field name="cheque_date" />
                        <field name="bank_name" />
                        <field name="number" />
                        <field name="submission_date" />
                    </group>
                    <notebook>
                        <page string="Employee History">
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree string="Salary Structure" editable="bottom">
                                    <field name="employee_id" />
                                    <field name="tds_amount"/>
                                </tree>
                                <form string="Challan Line">
                                    <group col="4">
                                        <field name="employee_id" />
                                        <field name="tds_amount" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="tds_amount_total" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="challan_company_form_view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">            
            <xpath expr="//notebook/page/group/group[1]/field[@name='website']" position="after">
                <field name="challan_code"/>
            </xpath>
        </field>
    </record>

    <record id="act_tax_challan_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Challans</field>
        <field name="res_model">tax.challan</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="target">current</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_tax_challan" 
        name="Challans" 
        parent="hr_payroll.menu_hr_payroll_root" 
        sequence="100" 
        action="act_tax_challan_view" />

</odoo>