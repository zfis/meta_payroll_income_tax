<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="inherit_view_employee_form">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">            
                <xpath expr="//notebook/page[@name='public']/group/group[1]/field[@name='work_location']" position="after">
                     <field name="work_location_type"/>
                </xpath>
                 <xpath expr="//notebook/page[@name='hr_settings']/group/group[1]/field[@name='employee_code']" position="after">
                     <field name="sf_id_2"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_view_employee_tree">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">            
                <xpath expr="/tree/field[@name='employee_code']" position="after">
                    <field name="sf_id_2" />
                    <field name="work_location_type" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_hr_contract_view_form">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">          
                <xpath expr="//notebook/page[@name='information']/group/group[1]/field[@name='medical_alw']" position="after">
                    <field name="special_alw"/>
                    <field name="dearness_alw"/>
                    <field name="mobile_alw"/>
                </xpath>
            </field>
        </record>

         <record model="ir.ui.view" id="inherit_hr_contract_view_tree">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">            
                <xpath expr="/tree/field[@name='employee_id']" position="after">
                    <field name="employee_code" />
                    <field name="sf_id_2" />
                    <field name="work_location_type" />
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>