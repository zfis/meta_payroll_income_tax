<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="inherit_view_employee_form">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">            
                <xpath expr="//notebook/page[@name='public']/group/group[1]/field[@name='work_location']" position="after">
                    <field name="work_location_type"/>
                </xpath>
                <xpath expr="//notebook/page[@name='personal_information']/group/group[1]/field[@name='bank_account_id']" position="after">
                    <field name="residency" groups="hr.group_hr_user" />
                    <field name="e_tin" groups="hr.group_hr_user" />
                </xpath>
                 <xpath expr="//notebook/page[@name='personal_information']/group/group[2]/field[@name='address_home_id']" position="before">
                    <field name="address_home_temp" />
                </xpath>
                <xpath expr="//notebook/page[@name='personal_information']/group/group[2]/field[@name='address_home_id']" position="after">
                    <group string="Tax Payer">
                        <div style="width:250px !important; padding-left: 5px">Is Freedom Fighter</div>
                        <div>
                            <field name="is_freedom_fighter" />
                        </div>
                        <div style="width:250px !important; padding-left: 5px">Is Disabled</div>
                        <div>
                            <field name="is_disabled" />
                        </div>
                        <div style="width:250px !important; padding-left: 5px">Is Disabled Parent/Legal Guardian</div>
                        <div>
                            <field name="is_disabled_parent_or_legal_guardian" />
                        </div>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[@name='hr_settings']/group/group[1]/field[@name='user_id']" position="after">
                    <field name="employee_code" />
                    <field name="sf_id_2"/>
                    <field name="joining_date" />
                    <field name="leaving_date" />
                </xpath>
                 <xpath expr="//group[@name='active_group']" position="after">
                    <group string="Emergency Contact">
                        <field name="emergency_name"/>
                        <field name="emergency_phone"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_view_employee_tree">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">            
                <xpath expr="//tree" position="replace">
                    <tree string="Employees" decoration-bf="message_needaction==True" class="salary-tracker">
                        <field name="name" />
                        <field name="employee_code" />
                        <field name="sf_id_2" />
                        <field name="work_location_type" />
                        <field name="work_phone" invisible="1" />
                        <field name="work_email" />
                        <field name="company_id" groups="base.group_multi_company" invisible="1" />
                        <field name="department_id" />
                        <field name="job_id" />
                        <field name="parent_id" invisible="1" />
                        <field name="coach_id" invisible="1" />
                        <field name="country_id" invisible="1" />
                        <field name="identification_id" invisible="1" />
                        <field name="passport_id" invisible="1" />
                        <field name="bank_account_id" invisible="1" />
                        <field name="residency" invisible="1" />
                        <field name="e_tin" invisible="1" />
                        <field name="gender" invisible="1" />
                        <field name="marital" invisible="1" />
                        <field name="birthday" invisible="1" />
                        <field name="joining_date" invisible="1" />
                        <field name="leaving_date" invisible="1" />
                        <field name="barcode" invisible="1" />
                        <field name="pin" invisible="1" />
                        <field name="message_needaction" invisible="1" />
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False" />
            <field name="search_view_id" ref="hr.view_employee_filter" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to add a new employee.</p>
                <p>With just a quick glance on the Odoo employee screen, you
                    can easily find all the information you need for each person;
                    contact data, job position, availability, etc.</p>
            </field>
            <field name="limit">10000</field>
        </record>
        
    </data>
</odoo>