<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Multi Payslip Wizard -->
        <record id="archive_payslip_form_wizard" model="ir.ui.view">
            <field name="name">archive.payslip.wizard.form.wizard</field>
            <field name="model">archive.payslip.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <h3>Do you sure want to archive payslip?</h3>
                    <footer>
                        <button name="archive_payslip" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_archive_payslip_wizard" model="ir.actions.act_window">
            <field name="name">Archive</field>
            <field name="res_model">archive.payslip.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id" eval="[(4, ref('hr_payroll.group_hr_payroll_manager')), (4, ref('hr_payroll.group_hr_payroll_user'))]"/>
        </record>
        
        <record id="action_archive_payslip_hr_payslip" model="ir.values">
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="name">Archive Payslips</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_archive_payslip_wizard'))"/>
            <field name="key">action</field>
            <field name="model">hr.payslip</field>
        </record>
        
    </data>
</odoo>
